<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    android:orientation="horizontal"
>

    <RelativeLayout
        android:id="@+id/list_normal_item_imglay"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_weight="1"
        android:background="@drawable/list_item_bg_selector"
    >
        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/list_normal_item_img"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            fresco:actualImageScaleType="centerCrop"
            fresco:roundAsCircle="true"
        />

    </RelativeLayout>

    <View android:layout_width="5dp" android:layout_height="match_parent"/>

    <RelativeLayout
        android:id="@+id/list_normal_item_imglay2"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_weight="1"
        android:background="@drawable/list_item_bg_selector"
    >
        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/list_normal_item_img2"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            fresco:actualImageScaleType="centerCrop"
            fresco:roundAsCircle="true"
        />

    </RelativeLayout>
</LinearLayout>
