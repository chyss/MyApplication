<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="150dp">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@mipmap/mickle"
            android:scaleType="centerCrop"
            android:id="@+id/imageView2"/>

        <TextView
            android:text="many a little makes a mickle."
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="20dp"
            android:textColor="#80ffffff"
            android:textSize="14sp"
            android:id="@+id/textView2"/>

    </RelativeLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="100dp">

        <RelativeLayout
            android:id="@+id/zone_retrofit"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/btn_bg_selector"
            android:layout_weight="1">

            <TextView
                android:text="Retrofit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                />
        </RelativeLayout>
        <View
            android:layout_width="0.33dp"
            android:layout_height="match_parent"
            android:background="#e0e0e0"
            />
        <RelativeLayout
            android:id="@+id/zone_rxjava"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/btn_bg_selector"
            android:layout_weight="1">

            <TextView
                android:text="Rxjava"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                />

        </RelativeLayout>
        <View
            android:layout_width="0.33dp"
            android:layout_height="match_parent"
            android:background="#e0e0e0"
            />
        <RelativeLayout
            android:id="@+id/zone_traces"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/btn_bg_selector"
            android:layout_weight="1">

            <TextView
                android:text="traces.txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
            />

        </RelativeLayout>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.33dp"
        android:background="#e0e0e0"
        />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="100dp">

        <RelativeLayout
            android:id="@+id/zone_opengl"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/btn_bg_selector"
            android:layout_weight="1">

            <TextView
                android:text="OpenGL"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
            />

        </RelativeLayout>
        <View
            android:layout_width="0.33dp"
            android:layout_height="match_parent"
            android:background="#e0e0e0"
            />
        <RelativeLayout
            android:id="@+id/zone_bluetooth"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/btn_bg_selector"
            android:layout_weight="1">

            <TextView
                android:text="BlueTooth"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
            />

        </RelativeLayout>
        <View
            android:layout_width="0.33dp"
            android:layout_height="match_parent"
            android:background="#e0e0e0"
            />
        <RelativeLayout
            android:id="@+id/zone_msgpack"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/btn_bg_selector"
            android:layout_weight="1">

            <TextView
                android:text="MsgPack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
            />

        </RelativeLayout>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.33dp"
        android:background="#e0e0e0"
        />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.33dp"
        android:background="#e0e0e0"
        android:layout_marginTop="7dp"
    />
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="100dp">

        <RelativeLayout
            android:id="@+id/bigimage_compress"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/btn_bg_selector"
            android:layout_weight="1">

            <TextView
                android:text="大图片的加载"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
            />

        </RelativeLayout>
        <View
            android:layout_width="0.33dp"
            android:layout_height="match_parent"
            android:background="#e0e0e0"
        />
        <RelativeLayout
            android:id="@+id/localimage_compress"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/btn_bg_selector"
            android:layout_weight="1">

            <TextView
                android:text="本地图片压缩"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
            />

        </RelativeLayout>
        <View
            android:layout_width="0.33dp"
            android:layout_height="match_parent"
            android:background="#e0e0e0"
        />
        <RelativeLayout
            android:id="@+id/permission_get"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/btn_bg_selector"
            android:layout_weight="1">

            <TextView
                android:text="动态权限获取"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
            />

        </RelativeLayout>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.33dp"
        android:background="#e0e0e0"
    />
</LinearLayout>
