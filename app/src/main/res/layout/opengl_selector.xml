<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <com.chyss.myapplication.widget.opengl.OpenglSurfaceView
        android:id="@+id/opengl_glsurface"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        app:renderType="4"
    />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.33dp"
        android:background="#e0e0e0"
    />

    <LinearLayout
                  android:orientation="horizontal"
                  android:layout_width="match_parent"
                  android:layout_height="100dp">

        <RelativeLayout
            android:id="@+id/opengl_triangle"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/btn_bg_selector"
            android:layout_weight="1">

            <TextView
                android:text="Triangle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
            />
        </RelativeLayout>
        <View
            android:layout_width="0.33dp"
            android:layout_height="match_parent"
            android:background="#e0e0e0"
        />
        <RelativeLayout
            android:id="@+id/opengl_cube"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/btn_bg_selector"
            android:layout_weight="1">

            <TextView
                android:text="Cube"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
            />

        </RelativeLayout>
        <View
            android:layout_width="0.33dp"
            android:layout_height="match_parent"
            android:background="#e0e0e0"
        />
        <RelativeLayout
            android:id="@+id/opengl_circle"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/btn_bg_selector"
            android:layout_weight="1">

            <TextView
                android:text="Circle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
            />

        </RelativeLayout>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.33dp"
        android:background="#e0e0e0"
    />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="100dp">

        <RelativeLayout
            android:id="@+id/opengl_cone"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/btn_bg_selector"
            android:layout_weight="1">

            <TextView
                android:text="Cone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
            />
        </RelativeLayout>
        <View
            android:layout_width="0.33dp"
            android:layout_height="match_parent"
            android:background="#e0e0e0"
        />
        <RelativeLayout
            android:id="@+id/opengl_Cylinder"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/btn_bg_selector"
            android:layout_weight="1">

            <TextView
                android:text="Cylinder"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
            />

        </RelativeLayout>
        <View
            android:layout_width="0.33dp"
            android:layout_height="match_parent"
            android:background="#e0e0e0"
        />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/btn_bg_selector"
            android:layout_weight="1">

            <TextView
                android:text=""
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
            />

        </RelativeLayout>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.33dp"
        android:background="#e0e0e0"
    />

</LinearLayout>